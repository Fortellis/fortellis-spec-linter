{
  "name": "@fortellis/spec-validator",
  "version": "1.0.6",
  "description": "Validate fortellis API specifications",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --watch",
    "test:ci": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint '**/*.{js,json}' --fix",
    "format": "prettier-eslint $PWD/'**/*.{js,json}' --write"
  },
  "author": "Jared K Jones",
  "license": "ISC",
  "dependencies": {
    "@stoplight/spectral": "^4.2.0",
    "@stoplight/yaml": "^3.5.0"
  },
  "devDependencies": {
    "@fortellis/eslint-config": "^1.0.4",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "prettier-eslint-cli": "^5.0.0"
  },
  "lint-staged": {
    "**/*.{js,json}": [
      "eslint --fix",
      "prettier-eslint --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm upgrade @fortellis/eslint-config && lint-staged"
    }
  }
}
