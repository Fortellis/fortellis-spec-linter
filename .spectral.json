{
  "extends": [["spectral:oas2", "off"]],
  "functions": [
    "definitionsCamelCase",
    "parameterNamesCamelCase",
    "responseCodeValidation",
    "requestIdHeaderValidation"
  ],
  "rules": {
    "oas2-schema": true,
    "info-description": true,
    "operation-description": true,

    "path-params-kebab-case": {
      "given": "$.paths",
      "message": "Path parameters should be in kebab-case",
      "severity": "error",
      "recommended": true,
      "then": {
        "field": "@key",
        "function": "pattern",
        "functionOptions": {
          "notMatch": "[~!.@#$%^&*()_=+|'\"? `_<>,[\\]]+"
        }
      }
    },
    "base-path-validation": {
      "given": "$",
      "message": "Missing required property: basePath",
      "severity": "error",
      "recommended": true,
      "then": {
        "field": "basePath",
        "function": "truthy"
      }
    },
    "parameter-names-camel-case": {
      "given": "$.paths",
      "severity": "error",
      "recommended": true,
      "then": {
        "function": "parameterNamesCamelCase"
      }
    },
    "definitions-camel-case": {
      "given": "$.definitions",
      "severity": "error",
      "recommended": true,
      "then": {
        "function": "definitionsCamelCase"
      }
    },
    "response-code-validation": {
      "given": "$.paths",
      "severity": "error",
      "recommended": true,
      "then": {
        "function": "responseCodeValidation"
      }
    },
    "request-id-header-validation": {
      "given": "$.paths",
      "severity": "error",
      "recommended": true,
      "then": {
        "function": "requestIdHeaderValidation"
      }
    }
  }
}